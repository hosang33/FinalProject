package kr.ac.twoportal.web.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import kr.ac.twoportal.dto.LectureListDto;
import kr.ac.twoportal.service.LectureService;

@Controller
@RequestMapping("/professor/lecture")
public class LectureController {

	@Autowired
	private LectureService lectureService;
	
	@GetMapping("/list.hta")
	public String list(Model model) {
		
		List<LectureListDto> lectures = lectureService.getAllLectureByProNo();
		int count = lectures.size();
		
		System.out.println(lectures.size());
		
		model.addAttribute("count", count);
		model.addAttribute("lectures", lectures);
		return "professor/lecture/list";
	}    
	
	@GetMapping("/detail.hta")  
	@ResponseBody  
	public LectureListDto detail(@RequestParam("lectno") int lectNo) {
		LectureListDto lectures = lectureService.getLectureByLectNo(lectNo);
		System.out.println(lectures.toString());
		
		return lectures;
	}
 	    
}
  